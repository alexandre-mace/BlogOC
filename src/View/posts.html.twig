{% extends'template.html.twig' %}

{% block pageHeader %}

    <header class="masthead" style="background-image: url('/web/assets/img/about-bg.jpg')">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                    <div class="page-heading">
                        <h1>Les posts</h1>
                        <span class="subheading">Tous les posts sont accessibles depuis cette page !</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

{% endblock %}

{% block mainContent %}

    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                
                {% for post in posts %}

                    <div class="post-preview">
                        <a href="/post/{{ post.id }}">
                            <h2 class="post-title">
                                {{ post.title }}
                            </h2>
                            <h3 class="post-subtitle">
                                {{ post.intro }}
                            </h3>
                        </a>
                        <p class="post-meta">
                            Derni√®re modification le {{ post.lastWriteDate|date('d-m-Y') }}
                        </p>
                    </div>
                    <hr>
                    
                {% endfor %}

            </div>
        </div>
    </div>

    <hr>

{% endblock %}