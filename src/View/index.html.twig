{% extends'template.html.twig' %}

{% block pageHeader %}

	<header class="masthead" style="background-color: #2A2C43">
	    <div class="container">
	        <div class="row">
	            <div class="col-lg-8 col-md-10 mx-auto">
	                <div class="site-heading">
	                    <h1>Blog d'Alexandre Macé</h1>
	                    <span class="subheading">Développeur web en formation chez OpenClassrooms</span>
	                </div>
	            </div>
	        </div>
	    </div>
	</header>

{% endblock %}

{% block mainContent %}

	<div class="container">
	    <div class="row">
	        <div class="col-lg-8 col-md-10 mx-auto">
				
			    {% for post in lastPosts %}

		            <div class="post-preview">
		                <a href="/post/{{ post.id }}"> 
		                    <h2 class="post-title">
		                        {{ post.title }} <span class="badge"><i class="fa fa-heart post-page-heart"></i> {{ post.likes }}</span>
		                    </h2>
		                    <h3 class="post-subtitle">
		                        {{ post.intro }}
		                    </h3>
		                </a>
		                <p class="post-meta">
		                	Dernière modification le {{ post.lastWriteDate|date('d-m-Y') }}
		                </p>
		            </div>
		            <hr>
			        
			    {% endfor %}

	            <!-- Pager -->
	            <div class="clearfix">
	                <a class="btn btn-primary float-right" href="/posts/1">Tous les posts</a> <!-- Lien à modifier -->
	            </div>

	        </div>
	    </div>
	</div>

	<hr>

{% endblock %}