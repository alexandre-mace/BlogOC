{% extends'template.html.twig' %}

{% block pageHeader %}

	<header class="masthead" style="background-image: url('/web/assets/img/post-bg.jpg')">
	    <div class="container">
	        <div class="row">
	            <div class="col-lg-8 col-md-10 mx-auto">
	                <div class="post-heading">
	                    <h1>Nouveau post</h1>
                        <p class="post-meta">
                            Veuillez remplir le formulaire ci-dessous pour ajouter votre nouveau post
                        </p>
	                </div>
	            </div>
	        </div>
	    </div>
	</header>

{% endblock %}

{% block mainContent %}


	<div class="container">
	    <div class="row">
	        <div class="col-lg-8 col-md-10 mx-auto">
				
			    <form name="addPost" id="postForm" novalidate>
			        <div class="control-group">
			            <div class="form-group floating-label-form-group controls">
			                <label>Titre</label>
			                <input type="text" class="form-control" placeholder="Titre" id="title" required data-validation-required-message="Veuillez écrire votre titre.">
			                <p class="help-block text-danger"></p>
			            </div>
			        </div>
			       	<div class="control-group">
				        <div class="form-group floating-label-form-group controls">
				            <label>Introduction</label>
				            <textarea rows="3" class="form-control" placeholder="Introduction" id="introduction" required data-validation-required-message="Veuillez écrire votre introduction."></textarea>
				            <p class="help-block text-danger"></p>
				        </div>
				    </div>
				    <div class="control-group">
				        <div class="form-group floating-label-form-group controls">
				            <label>Contenu</label>
				            <textarea rows="15" class="form-control" placeholder="Contenu" id="content" required data-validation-required-message="Veuillez écrire votre contenu."></textarea>
				            <p class="help-block text-danger"></p>
				        </div>
				    </div>
				    <br>
				    <div id="success"></div>
				    <div class="form-group">
				        <button type="submit" class="btn btn-primary" id="addPostButton">Ajouter votre post</button>
				    </div>
				</form>

	        </div>
	    </div>
	</div>

	<hr>

{% endblock %}